<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recycler_grad"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_img"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="17dp"
            android:background="#00A85656"
            app:layout_constraintBottom_toTopOf="@+id/post_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/blank_image" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:background="#00FFFFFF"
            android:ellipsize="end"
            android:ems="9"
            android:fontFamily="@font/luckiest_guy"
            android:gravity="right"
            android:lines="1"
            android:maxLines="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#E9FFFB"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/post_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_img" />

        <TextView
            android:id="@+id/post_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#00FFFFFF"
            android:ellipsize="end"
            android:ems="9"
            android:fontFamily="@font/berkshire_swash"
            android:gravity="right"
            android:maxLines="3"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#324271"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/post_progbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="114dp"
            android:layout_height="116dp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="110dp"
            android:background="#002C2C3B"
            app:layout_constraintBottom_toTopOf="@+id/post_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>